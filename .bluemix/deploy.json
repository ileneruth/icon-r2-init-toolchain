{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "clamav-endpoint": {
          "description": "CLAMAV endpoint",
          "type": "string"
        },
        "crypto-password": {
          "description": "description",
          "type": "string"
        },
        "jwt-secret": {
          "description": "description",
          "type": "string"
        },
        "endpoint_dictionary": {
          "description": "description",
          "type": "string"
        },
        "endpoint_retrieval": {
          "description": "description",
          "type": "string"
        },
        "endpoint_submission_token": {
          "description": "description",
          "type": "string"
        },
        "postgres_readonly_role": {
          "description": "description",
          "type": "string"
        },
        "tz": {
          "description": "Timezone",
          "type": "string"
        },
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        }
    },
    "required": [
        "clamav-endpoint",
        "crypto-password",
        "jwt-secret",
        "endpoint_dictionary",
        "endpoint_retrieval",
        "endpoint_submission_token",
        "postgres_readonly_role",
        "tz",
        "prod-region",
        "prod-organization",
        "prod-space"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.clamav-endpoint"
            },
            "key": "clamav-endpoint"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.crypto-password"
            },
            "key": "crypto-password"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.jwt-secret"
            },
            "key": "jwt-secret"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.postgres_readonly_role"
            },
            "key": "postgres_readonly_role"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.tz"
            },
            "key": "tz"
        },
        {
            "type": "table",
            "columnCount": 2,
            "widths": [
                "50%",
                "50%"
            ],
            "items": [
              {
                 "type": "label",
                 "title": "PHIX Endpoint Retrieval"
              },
              {
                 "type": "label",
                 "title": "PHIX Dictionary"
              },
              {
                 "type": "text",
                 "key": "endpoint_retrieval"
              },
              {
                 "type": "text",
                 "key": "endpoint_retrieval_token"
              },

              {
                 "type": "label",
                 "title": "PHIX Submission"
              },
              {
                 "type": "label",
                 "title": "PHIX Dictionary"
              },
              {
                 "type": "text",
                 "key": "PHIX_ENDPOINT_SUBMISSION"
              },
              {
                 "type": "text",
                 "key": "PHIX_ENDPOINT_DICTIONARY"
              }
            ]
          },
          {
            "type": "table",
            "columnCount": 3,
            "widths": [
                "34%",
                "33%",
                "33%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}
